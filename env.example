# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/eaglechair

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# Application
PROJECT_NAME=EagleChair API
PROJECT_DESCRIPTION=B2B Furniture E-commerce Backend
API_VERSION=1.0.0
API_V1_PREFIX=/api/v1
ENVIRONMENT=development
DEBUG=True

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Security Features
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100
HTTPS_REDIRECT=False
ENABLE_COMPRESSION=True

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/webp"]
ALLOWED_DOCUMENT_TYPES=["application/pdf"]

# Email
SMTP_HOST=smtp.gmail.com  # or your SMTP provider
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@eaglechair.com
SMTP_TLS=True
ADMIN_EMAIL=admin@eaglechair.com
