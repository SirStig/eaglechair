# EagleChair Environment Configuration Template
# Copy this file to .env and update the values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=EagleChair API
APP_VERSION=1.0.0
APP_DESCRIPTION=Premium Chair Company Backend API
DEBUG=True
TESTING=False

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ============================================================================
# API Configuration
# ============================================================================
API_V1_PREFIX=/api/v1
API_V2_PREFIX=/api/v2

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
# Development
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/eaglechair

# Production (DreamHost or your PostgreSQL server)
# DATABASE_URL=postgresql+asyncpg://username:password@hostname:5432/dbname

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/eaglechair_test

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# ============================================================================
# Redis Configuration (for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ============================================================================
# Security Configuration
# ============================================================================
# IMPORTANT: Generate a secure secret key for production!
# Run: openssl rand -hex 32
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=True

# ============================================================================
# HTTPS Configuration (for DreamHost deployment)
# ============================================================================
HTTPS_REDIRECT=True
SECURE_SSL_REDIRECT=False

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@eaglechair.com
SMTP_FROM_NAME=EagleChair

# ============================================================================
# AWS Configuration (for S3 storage)
# ============================================================================
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=eaglechair-media

# ============================================================================
# Payment Configuration (Stripe)
# ============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# Performance Configuration
# ============================================================================
ENABLE_CACHE=True
ENABLE_COMPRESSION=True
FUZZY_SEARCH_THRESHOLD=80

