# ============================================================================
# EagleChair Backend Environment Configuration
# ============================================================================
# Copy this file to .env and update the values for your environment
#
# Environment-specific files (priority order):
# 1. .env.local (highest priority - for local overrides, gitignored)
# 2. .env.{ENVIRONMENT} (e.g., .env.development, .env.production)
# 3. .env (fallback, gitignored)
# ============================================================================

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=EagleChair API
APP_VERSION=1.0.0
APP_DESCRIPTION=Premium Chair Company Backend API
ENVIRONMENT=development
DEBUG=True

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ============================================================================
# API Configuration
# ============================================================================
API_V1_PREFIX=/api/v1
API_V2_PREFIX=/api/v2

# ============================================================================
# CORS Configuration
# ============================================================================
# Note: Update CORS_ORIGINS for production with your actual domains
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================================
# Database Configuration
# ============================================================================
# Development (using Docker PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eaglechair

# Production example:
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# Testing Database
TESTING=False
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eaglechair_test

# ============================================================================
# Redis Configuration (for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300
ENABLE_CACHE=True

# ============================================================================
# Security Configuration
# ============================================================================
# IMPORTANT: Generate a secure random key for production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256

# Token Expiration - Company Users (longer sessions for business users)
COMPANY_ACCESS_TOKEN_EXPIRE_MINUTES=60
COMPANY_REFRESH_TOKEN_EXPIRE_DAYS=30

# Token Expiration - Admin Users (shorter sessions for security)
ADMIN_ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_REFRESH_TOKEN_EXPIRE_DAYS=1

# Password Configuration
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# HTTPS Configuration (for production)
HTTPS_REDIRECT=False
SECURE_SSL_REDIRECT=False

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# For other providers: Check their SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@eaglechair.com
SMTP_FROM_NAME=EagleChair
SMTP_TLS=True
ADMIN_EMAIL=admin@eaglechair.com

# ============================================================================
# AWS Configuration (for media storage)
# ============================================================================
# Leave empty to use local file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ============================================================================
# Payment Configuration (Stripe)
# ============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys
# Use test keys (pk_test_..., sk_test_...) for development
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================================================
# Logging Configuration
# ============================================================================
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# LOG_FORMAT: json (production), colored (development), simple
LOG_FORMAT=colored

# ============================================================================
# Performance Configuration
# ============================================================================
ENABLE_COMPRESSION=True
FUZZY_SEARCH_THRESHOLD=80

# ============================================================================
# Static Content Export
# ============================================================================
# Path to frontend directory for static content export
# Leave empty for auto-detection (../frontend)
FRONTEND_PATH=

# Production example:
# FRONTEND_PATH=/var/www/eaglechair.com/frontend
