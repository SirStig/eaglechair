# Production Environment Configuration for DreamHost VPS
# Copy this to backend/.env.production and fill in your actual values

# Application
ENVIRONMENT=production
DEBUG=False
APP_NAME=EagleChair API
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=False

# IMPORTANT: Proxy Configuration for DreamHost VPS
# These settings are CRITICAL for running behind reverse proxy
PROXY_HEADERS=True
FORWARDED_ALLOW_IPS=*
HTTPS_REDIRECT=False
SECURE_SSL_REDIRECT=False

# CORS - Update with your actual domain
CORS_ORIGINS=["https://eaglechair.com","https://www.eaglechair.com","https://api.eaglechair.com"]
CORS_ALLOW_CREDENTIALS=True

# Database - Update with your actual database credentials
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/eaglechair
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# Security - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-this-now
ALGORITHM=HS256

# Token Expiration
COMPANY_ACCESS_TOKEN_EXPIRE_MINUTES=60
COMPANY_REFRESH_TOKEN_EXPIRE_DAYS=30
ADMIN_ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_REFRESH_TOKEN_EXPIRE_DAYS=1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_ENABLED=True

# Email Configuration - Update with your SMTP details
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@eaglechair.com
SMTP_FROM_NAME=EagleChair
SMTP_TLS=True
ADMIN_EMAIL=admin@eaglechair.com

# Redis (if using)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
ENABLE_CACHE=True
ENABLE_COMPRESSION=True

# Testing
TESTING=False
